<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.Address_EditActivity">

    <LinearLayout
        android:background="@color/white"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"
            android:id="@+id/iv_back"
            app:tint="@color/black" />

        <TextView
             android:layout_marginRight="20dp"
            android:paddingRight="50dp"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Add New Address"
            android:textSize="20sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/bg_white_super_cat"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PinCode*"
                android:textSize="20sp"/>

            <EditText
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Pincode"
                android:background="@null"
                android:textSize="20sp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:id="@+id/et_pincode"
                android:layout_marginVertical="20dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="House No.,Building Name"
                android:textSize="20sp"/>

            <EditText
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Road Name,Area name "
                android:background="@null"
                android:id="@+id/et_address"
                android:textSize="20sp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="State*"
                        android:textSize="20sp"/>

                    <TextView
                        android:maxLines="1"
                        android:id="@+id/et_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@null"
                        android:hint="Select State "
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/green"
                        android:layout_marginBottom="20dp"
                        android:layout_marginHorizontal="20dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textSize="20sp"/>

                    <TextView
                        android:maxLines="1"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select City "
                        android:background="@null"
                        android:id="@+id/et_city"
                        android:textSize="20sp"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/green"
                        android:layout_marginBottom="20dp"
                        android:layout_marginHorizontal="20dp"/>


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Landmark"
                android:textSize="20sp"/>


            <EditText
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Landmark"
                android:background="@null"
                android:id="@+id/et_landmark"
                android:textSize="20sp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"/>


            <TextView
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name*"
                android:textSize="20sp"/>


            <EditText
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                android:background="@null"
                android:id="@+id/et_name"
                android:textSize="20sp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"/>


            <TextView
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile No*"
                android:textSize="20sp"/>


            <EditText
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Mobile No"
                android:background="@null"
                android:id="@+id/et_mobno"
                android:textSize="20sp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"/>


            <TextView
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address type"
                android:textSize="20sp"/>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_marginLeft="20dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/rb1"/>

                <TextView
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginVertical="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Home Address"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_marginLeft="20dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/rb2"/>

                <TextView
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginVertical="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Work Address"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>


            <Button
                android:layout_marginBottom="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/btn_save"
                android:textColor="@color/white"
                android:text="Save"
                 android:textSize="24sp"
                android:background="@color/green"
                />


        </LinearLayout>


    </ScrollView>



</LinearLayout>