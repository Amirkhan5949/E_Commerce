<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorlightgray"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/bluebackground"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/layout"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/anti_corona"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHOPIN"
                    android:gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/ll_search"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@drawable/background"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/seaerch"
                            android:id="@+id/search"/>

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Search"
                            android:textColor="#818181"
                            android:textSize="16sp"/>

                    </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll_Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/background">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/cart"
                        android:layout_marginHorizontal="20dp"
                        android:id="@+id/camera"
                        android:layout_gravity="center_vertical"/>



                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                app:cardCornerRadius="10dp"
                android:layout_below="@+id/layout"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ss.com.bannerslider.Slider
                    android:id="@+id/banner_slider1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:visibility="gone"
                android:layout_below="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll_main"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:id="@+id/catlayout"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Top Category"
                            android:fontFamily="@font/roboto"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                        <TextView
                            android:textSize="12sp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:id="@+id/tv_viewall"
                            android:background="@drawable/buttonbackground"
                            android:textColor="#ffffff"
                            />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginHorizontal="8dp"
                        android:layoutAnimation="@anim/item_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rv_Category"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/background"/>

                <LinearLayout
                    android:id="@+id/newlay"
                    android:background="#FFFFFF"
                    android:layout_below="@+id/catlayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="New Arrivals"
                            android:fontFamily="@font/roboto"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                        <TextView
                            android:textSize="12sp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:background="@drawable/buttonbackground"
                            android:textColor="#ffffff"
                            android:id="@+id/b_viewall"/>

                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginBottom="20dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutAnimation="@anim/item_layout"
                        android:id="@+id/p_recycler"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/background"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:id="@+id/viewalllayout"
                        android:paddingHorizontal="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Featured Brand"
                            android:fontFamily="@font/roboto"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                        <TextView
                            android:textSize="12sp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:background="@drawable/buttonbackground"
                            android:textColor="#ffffff"
                            android:id="@+id/brand_viewall"/>

                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layoutAnimation="@anim/item_layout"
                        android:layout_height="wrap_content"
                        android:id="@+id/brandrecycler"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginBottom="10dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/background"/>

                <LinearLayout
                    android:layout_below="@+id/brandlay"
                    android:id="@+id/recommandlay"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Recommanded"
                            android:fontFamily="@font/roboto"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                        <TextView
                            android:textSize="12sp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:background="@drawable/buttonbackground"
                            android:textColor="#ffffff"
                            android:id="@+id/recommand_viewall"/>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginBottom="20dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_width="wrap_content"
                        android:layoutAnimation="@anim/item_layout"
                        android:layout_height="wrap_content"
                        android:id="@+id/recommanded_recycler"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/background"/>



            </LinearLayout>



        </RelativeLayout>

    </ScrollView>

    <ProgressBar
        android:layout_centerInParent="true"
        android:layout_width="50dp"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_height="50dp"
        android:id="@+id/progress"/>




</RelativeLayout>