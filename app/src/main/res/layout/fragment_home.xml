<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@drawable/bluebackground"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/layout"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/anti_corona"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHOPIN"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    />

                <LinearLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:background="@drawable/background"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/seaerch"
                        android:id="@+id/search"/>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search"
                        android:textColor="#818181"
                        android:textSize="16sp"/>

                </LinearLayout>



                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@drawable/background">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/cart"
                        android:layout_marginHorizontal="20dp"
                        android:id="@+id/camera"
                        android:layout_gravity="center_vertical"/>



                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                app:cardCornerRadius="20dp"
                android:layout_below="@+id/layout"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ss.com.bannerslider.Slider


                    app:slider_defaultBanner="1"
                    android:id="@+id/banner_slider1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/catlayout"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_below="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_Category"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewalllayout"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/catlayout">

                <TextView
                    android:textColor="@color/colorBlack"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="New Arrivals"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:background="@drawable/buttonbackground"
                    android:textColor="#ffffff"
                    android:id="@+id/b_viewall"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_below="@id/viewalllayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/p_recycler"/>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>





</RelativeLayout>